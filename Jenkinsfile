pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                echo "Cloning code from GitHub repo..."
            }
        }
        stage('Build') {
            steps {
                echo "Building the application..."
            }
        }
        stage('Test') {
            steps {
                echo "Running tests..."
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploying application..."
            }
        }
    }
}
